extends layout

block content
  .bg__image__page
    .login__wrapper.p-0.container.position-relative
      .login__container.middle__center__md.shadow.p-3.p-md-5(style='background: #fafafa')
        div Welcome to
        .h2.mb-0 Stepping back
        .h1.mb-0 IN HISTORY
        form(action="/users/register" method="POST").row.mt-5
          .col-md-4.form-group
            input.form-control(name="name" type="text" placeholder="Họ và tên" value=values ? values.name : '')
          .col-md-4.form-group
            input.form-control(name="birthday" type="text" placeholder="Ngày sinh" value=values ? values.birthday : '')
          .col-md-4.form-group
            select.form-control(name="sex" value=values ? values.sex : '')
              option(value='-1' selected).d-none Giới tính
              option Nam
              option Nữ
          .col-md-4.form-group
            select.form-control(name="province" value=values ? values.province : '')
              option(selected) Tỉnh Bà Rịa - Vũng Tàu
          .col-md-4.form-group
            select.form-control(name="district" value=values ? values.district : '')
              option(value='-1' selected).d-none Quận/Huyện
              option Thành phố Vũng Tàu
              option Thành phố Bà Rịa
              option Huyện Châu Đức
              option Huyện Xuyên Mộc
              option Huyện Long Điền
              option Huyện Đất Đỏ
              option Thị xã Phú Mỹ
              option Huyện Côn Đảo
          .col-md-4.form-group
            select.form-control(name="school" value=values ? values.school : '')
              option(value='-1' selected).d-none Cấp
              option Trung học cơ sở
              option Trung học phổ thông
          .col-md-4.form-group
            input.form-control(name="nameSchool" type="text" placeholder="Tên trường" value=values ? values.nameSchool : '')
          .col-md-4.form-group
            select.form-control(name="grade" value=values ? values.grade : '')
              option(value='-1' selected).d-none Khối
              option Khối 6
              option Khối 7
              option Khối 8
              option Khối 9
              option Khối 10
              option Khối 11
              option Khối 12
          .col-md-4.form-group
            input.form-control(name="classRoom" type="text" placeholder="Tên lớp" value= values ? values.classRoom : '')
          .col-md-6.form-group
            input.form-control(name="email" type="email" placeholder="Địa chỉ email" value= values ? values.email : '')
          .col-md-6.form-group
            input.form-control(name="password" type="password" placeholder="Mật khẩu")
          .col-12.text-center
            button(type="submit").btn.btn-primary Đăng ký
            .mt-3.small
              span Đã có tài khoản? &nbsp;
              a(href="/users/login") Đăng nhập ngay!