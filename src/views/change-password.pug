extends layout

block content
  include particals/navbarUser.pug
  .container
    .pb-2.pt-4.pt-md-5
    .card.p-4.p-md-5
      h4(style='color: #3d5170').text-center.font-weight-bold ĐỔI MẬT KHẨU
      form(action='/users/change-password' method='POST').mt-2.mx-auto
        input#users_change_password_email(name='email' value=user.email)
        .form-group
          input#old_password.form-control(name='old_password' type='text' placeholder='Mật khẩu cũ' required)
        .form-group
          input#new_password.form-control(name='new_password' type='text' placeholder='Mật khẩu mới' required)
        .form-group
          input#re_password.form-control(placeholder='Nhập lại mật khẩu mới' required)
        .text-center
          button#btn_change_password(disabled).btn.btn-primary Đổi mật khẩu