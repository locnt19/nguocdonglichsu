    section
      if arrayData
        -for(var location of arrayData)
          -var index = arrayData.indexOf(location)
          section.modal_chucnang__wrapper.p-5.bg__4(data-modal=location.code)
            .card.p-4.bg__card.container.middle__center__md
              h4.font-weight-bold.text-center #{location.name}
              -for(var i = 0; i < location.questions.length; i++)
                -var item = location.questions[i]
                  input.d-none(name=`answers[${index}][${i}][code]` value=`${item.code}`)
                  div(class=`tabs ${location.code}` id=`${item.code}` style='display: none')
                    h5.question__question.font-weight-bold Question #{i + 1}: #{item.question}
                    .question__answer
                      .custom-control.custom-radio.mt-2
                        input.custom-control-input(id=`${item.code}-a` type='radio' name=`answers[${index}][${i}][answer]` value='a')
                        label.custom-control-label.h6(for=`${item.code}-a`) A. #{item.a}
                      .custom-control.custom-radio.mt-2
                        input.custom-control-input(id=`${item.code}-b` type='radio' name=`answers[${index}][${i}][answer]` value='b')
                        label.custom-control-label.h6(for=`${item.code}-b`) B. #{item.b}
                      .custom-control.custom-radio.mt-2
                        input.custom-control-input(id=`${item.code}-c` type='radio' name=`answers[${index}][${i}][answer]` value='c')
