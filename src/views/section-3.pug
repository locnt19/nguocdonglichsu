                      .custom-control.custom-radio.mt-2
                        input.custom-control-input(id=`${item.code}-d` type='radio' name=`answers[${index}][${i}][answer]` value='d')
                        label.custom-control-label.h6(for=`${item.code}-d`) D. #{item.d}
                    .custom-control.custom-checkbox
                      input.star_checkbox.custom-control-input(id=`${location.code}_star${i}` name=`answers[${index}][${i}][star]` type='checkbox')
                      label.custom-control-label.text-dark(for=`${location.code}_star${i}`) Lucky Star
              .text-center
                button(type='button' class=`${location.code}`).btn.btn-primary.question__submit.px-5.mt-4.next_question Next
                button(type='button' style='display: none' class=`${location.code}`).btn.btn-primary.question__submit.px-5.mt-4.s3_stop Next location
              .mt-3
