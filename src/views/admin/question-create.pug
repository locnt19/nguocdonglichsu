extends layout-admin.pug

block content
    .row.m-0
      .col-12.p-0.px-lg-3
        .card.p-3.p-md-5
          .h6 Tạo mới
          form.row
            .form-group.col-12
              select.form-control
                option(selected).d-none -- Phần thi --
                option Phần 1
                option Phần 2
                option Phần 3
                option Phần 4
            .form-group.col-12
              textarea(placeholder="Câu hỏi").form-control
            .d-flex.form-group.col-12
              .custom-control.custom-radio
                input.custom-control-input#answer1(type='radio' name='answer')
                label.custom-control-label(for="answer1")
              textarea(placeholder="Câu trả lời A").form-control
            .d-flex.form-group.col-12
              .custom-control.custom-radio
                input.custom-control-input#answer2(type='radio' name='answer')
                label.custom-control-label(for="answer2")
              textarea(placeholder="Câu trả lời B").form-control
            .d-flex.form-group.col-12
              .custom-control.custom-radio
                input.custom-control-input#answer3(type='radio' name='answer')
                label.custom-control-label(for="answer3")
              textarea(placeholder="Câu trả lời C").form-control
            .d-flex.form-group.col-12
              .custom-control.custom-radio
                input.custom-control-input#answer4(type='radio' name='answer')
                label.custom-control-label(for="answer4")
              textarea(placeholder="Câu trả lời D").form-control
            .form-group.col-12
              .custom-control.custom-checkbox.mb-3
                input#customCheck2.custom-control-input(type="checkbox")
                label.custom-control-label(for="customCheck2") Có hình ảnh
              .custom-file
                input#customFile.custom-file-input(type="file" disabled)
                label.custom-file-label(for="customFile") -- Hình ảnh --
            .col-12
              button(type="submit").btn.btn-block.btn-primary Tạo