extends layout-admin.pug

block content
  .row.m-0
    .col-12.p-0.px-lg-3
      .card.p-3.p-md-5
        .d-flex
          .h6 Phần 2
          a.small.ml-auto(href='/questions/section-2/create') Thêm câu hỏi mới
        table#table_section2_list.table.table-bordered
          thead.bg-light
            tr
              th.text-center.align-middle.border-0(scope='col')
                | #
              th.align-middle.border-0(scope='col')
                | Câu hỏi
              th.align-middle.border-0(scope='col') Trả lời
          tbody
            if deThi !== null
              -for(let cauHoi of deThi.questions)
                tr
                  td(style='width: 70px').text-center
                    .mb-2 #{cauHoi.code}
                    a(class="material-icons" style="font-size: 16px;" href=`/questions/section-2/edit/${cauHoi._id}`) create
                  td(style='width: 40%') #{cauHoi.question}
                  td
                    .mb-2(class={'text-success font-weight-bold': cauHoi.true === 'a'}) A. #{cauHoi.a}
                    .mb-2(class={'text-success font-weight-bold': cauHoi.true === 'b'}) B. #{cauHoi.b}
                    .mb-2(class={'text-success font-weight-bold': cauHoi.true === 'c'}) C. #{cauHoi.c}
                    .mb-2(class={'text-success font-weight-bold': cauHoi.true === 'd'}) D. #{cauHoi.d}