extends layout-admin.pug

block content
  .row.m-0
    .col-12.p-0.px-lg-3
      .card.p-3.p-md-5
        .d-flex
          .h6 Phần 4
          a.small.ml-auto(href='/questions/section-4/create') Thêm câu hỏi mới
        .table-responsive-lg
          table.table.table-bordered
            thead.bg-light
              tr
                th.text-center.align-middle.border-0(scope='col') #
                th.align-middle.border-0(scope='col') Câu hỏi
                th.align-middle.border-0(scope='col') Trả lời
            tbody
              if deThi !== null
                -for(let cauHoi of deThi.questions)
                  tr
                    td(style='width: 70px').text-center #{cauHoi.code}
                    td(style='width: 45%') #{cauHoi.question}
                    td
                      .mb-2 #{cauHoi.a}
      //- ul.pagination.justify-content-center.m-0.py-4
        li.page-item.disabled
          a.page-link(href="#" tabindex="-1") Previous
        li.page-item
          a.page-link(href="#") 1
        li.page-item
          a.page-link(href="#") 2
        li.page-item
          a.page-link(href="#") 3
        li.page-item
          a.page-link(href="#") Next
