extends layout-admin.pug

block content
  .row.m-0
    .col-12.p-0.px-lg-3
      .card.p-3.p-md-5
        .d-flex
          .h6 Phần 4
          a.small.ml-auto(href='/questions/section-4/create') Thêm câu hỏi mới
        table#table_section4_list.table.table-bordered
          thead.bg-light
            tr
              th.text-center.align-middle.border-0(scope='col') #
              th.align-middle.border-0(scope='col') Câu hỏi
              th.align-middle.border-0(scope='col') Trả lời
          tbody
            if deThi !== null
              -for(let cauHoi of deThi.questions)
                tr
                  td(style='width: 70px').text-center
                    .mb-3 #{cauHoi.code}
                    a(class="material-icons" style="font-size: 16px;" href=`/questions/section-4/edit/${cauHoi._id}`) create
                  td(style='width: 45%') #{cauHoi.question}
                  td
                    .mb-2 #{cauHoi.a}