extends layout-admin.pug

block content
  .row.m-0
    .col-12.p-0.px-lg-3
      .card.p-3.p-md-5
        .d-flex
          if cauHoi !== null
            .h6 #{cauHoi.code}
          if deThi !== null
            small.ml-auto
              a(href='/questions/section-4') Đã có #{deThi.questions.length} câu hỏi
        form(method='POST').row
          input.d-none(name='codeDeThi' value=deThi.code)
          input.d-none(name='idCauHoi' value=cauHoi._id)
          .form-group.col-12
            textarea(name='question' placeholder="Câu hỏi").form-control=cauHoi.question
          .d-flex.form-group.col-12
            .custom-control.custom-radio
              input.custom-control-input#answer1(type='radio' name='true' value=cauHoi.code checked)
              label.custom-control-label(for="answer1")
            textarea(name='a' placeholder="Câu trả lời đúng").form-control=cauHoi.a
          .col-12
            button(type="submit").btn.btn-block.btn-primary Cập nhật