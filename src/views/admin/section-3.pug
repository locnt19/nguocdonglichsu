extends layout-admin.pug

block content
  .row.m-0
    .col-12.p-0.px-lg-3
      .card.p-3.p-md-5
        .d-flex
          .h6 Phần 3
          a.small.ml-auto(href='/questions/section-3/create') Thêm câu hỏi mới
        .table-responsive-lg
          table.table.table-bordered
            thead.bg-light
              tr
                th.text-center.align-middle.border-0(scope='col')
                  | #
                th.text-center.align-middle.border-0(scope='col')
                  | Địa phương
                th.align-middle.border-0(scope='col')
                  | Câu hỏi
                th.align-middle.border-0(scope='col') Trả lời
            tbody
              if deThi !== null
                -for(let cauHoi of deThi.questions)
                  tr
                    td(style='width: 70px').text-center #{cauHoi.code}
                    td(style='width: 130px').text-center #{cauHoi.location}
                    td(style='width: 45%') #{cauHoi.question}
                    td
                      .mb-2(class={'text-success font-weight-bold': cauHoi.true === 'a'}) A. #{cauHoi.a}
                      .mb-2(class={'text-success font-weight-bold': cauHoi.true === 'b'}) B. #{cauHoi.b}
                      .mb-2(class={'text-success font-weight-bold': cauHoi.true === 'c'}) C. #{cauHoi.c}
                      .mb-2(class={'text-success font-weight-bold': cauHoi.true === 'd'}) D. #{cauHoi.d}
      //- ul.pagination.justify-content-center.m-0.py-4
        li.page-item.disabled
          a.page-link(href="#" tabindex="-1") Previous
        li.page-item
          a.page-link(href="#") 1
        li.page-item
          a.page-link(href="#") 2
        li.page-item
          a.page-link(href="#") 3
        li.page-item
          a.page-link(href="#") Next
