extends layout-admin.pug

block var
  -var currentURL = '/admin/xep-hang'

block content
  h5.font-weight-bold(style='color: #3d5170; padding-left: 15px') Xếp hạng
  .row.m-0
    .col-12.p-0.px-lg-3
      .card.p-3.p-md-5
        table#table_xephang_users.table.table-bordered.dt-responsive.nowrap
          thead.bg-light
            tr
              th
              th.align-middle(scope='col') Họ và tên
              th.align-middle(scope='col') Điểm
              th.align-middle(scope='col') Thời gian
              th.align-middle(scope='col') Ngày sinh
              th.align-middle(scope='col') Tên lớp
              th.align-middle(scope='col') Huyện/Thành Phố
              th.align-middle(scope='col') Trường
              th.align-middle(scope='col') Bậc
              th.align-middle(scope='col') Email
              th.align-middle(scope='col') ID
          tbody
            -for(var user of listUser)
              tr
                td
                td #{user.name}
                td #{user.summaryScore}
                td #{user.summaryTime}
                td #{user.birthday}
                td #{user.classRoom}
                td #{user.district}
                td #{user.nameSchool}
                td #{user.school}
                td #{user.email}
                td #{user._id}