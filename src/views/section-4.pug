extends layout

block content
  form(method='POST')
    section.bg__exams
      .container.py-3.min-vh-100
        if exams
          .middle__center__md.question__wrapper.mx-auto
            h3.text-white.font-weight-bold #{title}
              if user.luotThiConLai.section1 === 1
                input.d-none(name='lanThi' value='2')
              if user.luotThiConLai.section1 === 2
                input.d-none(name='lanThi' value='1')
              input.d-none(name='tuan' value=tuanHienTai)
              input.d-none(name='dot' value=dotHienTai)
              input.d-none(name='exam' value=exams.code)
              input.d-none(name='user' value=user._id)
              input.d-none#submit_time_summary(name='time' value='0')
            .question__scroll.card.p-3.px-sm-4.pt-sm-4.pb-sm-3.px-md-5.pt-md-3.pb-md-4
              .row
                .col-6
                  -for(var item of exams.questions)
                    -var index = exams.questions.indexOf(item)
                    .dragula-container.px-3.py-2.my-3.border.rounded
                      input.anwser(name=`answers[${index}][answer]`)
                      .user-select-none.no-dragdrop
                        span #{item.question}
                        input(name=`answers[${index}][code]` value=item.code)
                      .user-select-none
                .col-6
                  .dragula-container.px-3.py-2.my-3.border.rounded
                    -for(var item of randomAnwser)
                      .user-select-none(data-anwser=item.true) #{item.a}
              .text-center
                button.btn.btn-primary Chấm điểm
block scripts
  script(src='/javascripts/section-4.js')